<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nurrofiqi.anurr.iak_9des">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme"
        tools:replace="android:icon">
        <activity
            android:name=".view.ActivityMain"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.ActivityDetail"
            android:theme="@style/MyDetail" />
        <activity
            android:name=".view.ActivitySplash"
            android:noHistory="true"
            android:theme="@style/MyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ActivityFirstRun" />
    </application>

</manifest>