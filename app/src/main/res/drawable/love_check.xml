<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_checked="true"
        android:drawable="@drawable/ic_favorite_black_24dp" /> <!-- checked -->
    <item android:state_checked="false"
        android:drawable="@drawable/ic_favorite_border_black_24dp" /> <!-- unchecked -->
    <item android:state_focused="true"
        android:drawable="@drawable/ic_favorite_border_black_24dp" />    <!--on focus-->
    <item android:drawable="@drawable/ic_favorite_border_black_24dp" /> <!-- default -->

    <transition
        android:fromId="@+id/usual"
        android:toId="@+id/selected" >
        <animation-list>
            <!--fill in your animation here-->
        </animation-list>
    </transition>
</animated-selector>