<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyTheme" parent="AppTheme">

        <item name="android:statusBarColor">@color/appColor</item>
        <item name="colorPrimary">@color/appColor</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/appColor</item>
        <!--<item name="android:windowBackground">@color/white</item>-->

    </style>

    <style name="MyDetail" parent="MyTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="android:colorControlNormal">#ffffff</item>

    </style>

    <style name="collapsedappbar">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/collapsedText</item>
    </style>

    <style name="expandedappbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/expandedText</item>
    </style>

    <color name="collapsedText">#ffffff</color>
    <color name="expandedText">#00ffffff</color>
    <color name="white">#ffffff</color>
    <color name="brokenwhite">#fafafa</color>

</resources>
